[flake8]
max-line-length = 100
max-complexity = 15
exclude = 
    venv,
    __pycache__,
    instance,
    .git,
    migrations,
    .coverage,
    node_modules
# Ignores:
# E203 - whitespace before ':' (conflicts with Black)
# E501 - line too long (Black handles this)
# W503 - line break before binary operator (conflicts with Black)
# C901 - complexity (handled by Radon)
ignore = 
    E203,
    E501,
    W503,
    C901
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841,E402
    app.py:F401,E402
