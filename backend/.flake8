[flake8]
max-line-length = 127
max-complexity = 15
exclude = 
    venv,
    __pycache__,
    instance,
    .git,
    migrations,
    .coverage
ignore = 
    E203,
    E302,
    E305,
    E402,
    E501,
    E712,
    E128,
    W291,
    W293,
    W391,
    W503,
    C901,
    F401
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
